<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Couples Administration Theme -->
    <style name="CoupleTableRow">
      <item name="android:minWidth">25px</item>
      <item name="android:minHeight">100px</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:background">#FE3E00</item>
      <item name="android:layout_margin">10dp</item>
    </style>
  
    <style name="CoupleLinearLayout">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CoupleTextView">
      <item name="android:text">Example Couple Name Here</item>
      <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:layout_marginLeft">10dp</item>
      <item name="android:gravity">center_vertical|left</item>
      <item name="android:layout_weight">1</item>
    </style>

    <style name="CoupleButton">
      <item name="android:text">Expand</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:layout_marginRight">10dp</item>
    </style>


</resources>
